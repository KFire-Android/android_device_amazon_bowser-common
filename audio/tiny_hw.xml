<!-- TinyHAL configuration file for Kindle Fire HD -->
<tinyhal>

  <!-- Speaker Volume -->
  <!-- We are able to have most of our routing static so do that -->
  <path>
    <ctl name="DL1 Media Playback Volume" val="118" />
    <ctl name="DL1 Voice Playback Volume" val="120" />
    <ctl name="SDT DL Volume" val="120" />
    <ctl name="Digital Playback Volume" val="95,95" />
    <ctl name="Digital Capture Volume" val="0" />
    <ctl name="Speaker Boost Volume" val="3" />
    <ctl name="Headphone Aux Volume" val="7,7" />
    <ctl name="MIXINR PGA Volume" val="7" />
    <ctl name="AUDUL Voice UL Volume" val="120" />
    <ctl name="Capture Volume" val="31,31" />
    <ctl name="SDT UL Volume" val="101" />
    <ctl name="Sidetone Mixer Capture" val="0" />
    <ctl name="Headphone ZC Switch" val="1,1" />
    <ctl name="Speaker ZC Switch" val="1,1" />
    <ctl name="SPK Switch" val="0" />
    <ctl name="MUX_UL10" val="9" />
    <ctl name="MUX_UL11" val="10" />
    <ctl name="Capture Switch" val="1,1" />
    <ctl name="MIXINR PGA Switch" val="1" />
    <ctl name="INPGAR IN1R Switch" val="1" />
    <ctl name="MIXINL PGA Switch" val="0" />
    <ctl name="Sidetone Mixer Playback" val="1" />
    <ctl name="DL1 MM_EXT Switch" val="1" />
    <ctl name="HP Switch" val="0" />
  </path>

  <device name="speaker">
    <path name="on">
      <ctl name="Speaker Volume" val="1,1" />
      <ctl name="DL1 Mixer Multimedia" val="1" />
      <ctl name="HP Switch" val="0" />
      <ctl name="SPK Switch" val="1" />
    </path>
    <path name="off">
      <ctl name="HP Switch" val="0" />
      <ctl name="SPK Switch" val="0" />
    </path>
  </device>

  <device name="headphone">
    <path name="on">
      <ctl name="Headphone Volume" val="1,1" />
      <ctl name="DL1 Mixer Multimedia" val="1" />
      <ctl name="HP Switch" val="1" />
      <ctl name="SPK Switch" val="0" />
    </path>
    <path name="off">
      <ctl name="HP Switch" val="0" />
      <ctl name="SPK Switch" val="0" />
    </path>
  </device>

  <device name="builtin-mic">
    <path name="on">
      <ctl name="MUX_UL10" val="9" />
      <ctl name="MUX_UL11" val="10" />
      <ctl name="DMICDAT Switch" val="1" />
      <ctl name="DMIC1 UL Volume" val="146,146" />
      <ctl name="Digital Capture Volume" val="112,112" />
      <ctl name="Sidetone Mixer Capture" val="1" />
    </path>
    <path name="off">
      <ctl name="DMICDAT Switch" val="0" />
      <ctl name="DMIC1 UL Volume" val="120,120" />
      <ctl name="Digital Capture Volume" val="0" />
      <ctl name="Sidetone Mixer Capture" val="0" />
    </path>
  </device>
</tinyhal>
